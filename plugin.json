{
  "$schema": "./node_modules/midi-mixer-plugin/plugin.schema.json",
  "id": "com.midi-mixer.obs",
  "name": "OBS",
  "type": "node",
  "version": "0.1.4",
  "author": "MIDI Mixer",
  "main": "lib/index.js",
  "icon": "icon.svg",
  "settings": {
    "address": {
      "label": "OBS WebSocket Address",
      "required": false,
      "type": "text",
      "fallback": "ws://localhost:4455"
    },
    "password": {
      "label": "OBS WebSocket Password",
      "required": false,
      "type": "password"
    },
    "status": {
      "label": "Status",
      "type": "status",
      "fallback": "Disconnected"
    },
    "reconnect": {
      "label": "Reconnect",
      "type": "button"
    },
    "meterMultiplier": {
      "label": "Meter Scaling Multiplier",
      "type": "text",
      "fallback": "1"
    }
  }
}